<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        style="@style/CustomCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_h"
            android:padding="16dp">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/img_icon_shopping_mode_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:src="@drawable/ic_security_white_56dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageButton
                android:id="@+id/btn_info_shopping_mode_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:contentDescription="@string/info_shopping_mode_home"
                android:src="@drawable/ic_info_white_24dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tv_title_shopping_mode_home" />

            <TextView
                android:id="@+id/tv_title_shopping_mode_home"
                style="@style/TextView.SemiBold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="@string/title_shopping_mode_home"
                android:textSize="@dimen/font_nm"
                app:layout_constraintStart_toEndOf="@+id/img_icon_shopping_mode_home"
                app:layout_constraintTop_toTopOf="@+id/img_icon_shopping_mode_home" />

            <com.ornach.nobobutton.NoboButton
                android:id="@+id/btn_shopping_mode_home"
                style="@style/NoboButton.White.Small"
                android:layout_marginTop="4dp"
                app:layout_constraintBottom_toBottomOf="@+id/img_icon_shopping_mode_home"
                app:layout_constraintStart_toStartOf="@+id/tv_title_shopping_mode_home"
                app:layout_constraintTop_toBottomOf="@+id/tv_title_shopping_mode_home"
                app:nb_text="@string/start_shopping_mode_home" />

            <com.ornach.nobobutton.NoboButton
                android:id="@+id/btn_meet_detail_home"
                style="@style/NoboButton.White.Small"
                android:layout_marginStart="8dp"
                app:layout_constraintStart_toEndOf="@+id/btn_shopping_mode_home"
                app:layout_constraintTop_toTopOf="@+id/btn_shopping_mode_home"
                app:nb_text="@string/meet_detail_home" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>