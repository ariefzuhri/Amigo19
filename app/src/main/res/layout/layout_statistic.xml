<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_province_statistic"
        style="@style/CustomCardView"
        android:layout_width="match_parent"
        android:layout_height="140dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/shape_e"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/tv_name_province_statistic"
                style="@style/TextView.SemiBold"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/loading"
                android:textSize="@dimen/font_md"
                app:layout_constraintEnd_toStartOf="@+id/guideline_province_statistic"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_infected_province_statistic"
                style="@style/TextView.Regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/loading"
                android:textSize="@dimen/font_nm"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_patient_province_statistic"
                style="@style/TextView.Regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/loading"
                android:textSize="@dimen/font_nm"
                app:layout_constraintEnd_toEndOf="@+id/tv_infected_province_statistic"
                app:layout_constraintTop_toBottomOf="@+id/tv_infected_province_statistic" />

            <TextView
                android:id="@+id/tv_recovered_province_statistic"
                style="@style/TextView.Regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/loading"
                android:textSize="@dimen/font_nm"
                app:layout_constraintEnd_toEndOf="@+id/tv_infected_province_statistic"
                app:layout_constraintTop_toBottomOf="@+id/tv_patient_province_statistic" />

            <TextView
                android:id="@+id/tv_death_province_statistic"
                style="@style/TextView.Regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/loading"
                android:textSize="@dimen/font_nm"
                app:layout_constraintEnd_toEndOf="@+id/tv_infected_province_statistic"
                app:layout_constraintTop_toBottomOf="@+id/tv_recovered_province_statistic" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_province_statistic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_begin="120dp" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_country_statistic"
        style="@style/CustomCardView"
        android:layout_width="match_parent"
        android:layout_height="140dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/shape_f"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/tv_name_country_statistic"
                style="@style/TextView.SemiBold"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/indonesia_statistic"
                android:textSize="@dimen/font_md"
                app:layout_constraintEnd_toStartOf="@+id/guideline_country_statistic"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_infected_country_statistic"
                style="@style/TextView.Regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/loading"
                android:textSize="@dimen/font_nm"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_patient_country_statistic"
                style="@style/TextView.Regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/loading"
                android:textSize="@dimen/font_nm"
                app:layout_constraintEnd_toEndOf="@+id/tv_infected_country_statistic"
                app:layout_constraintTop_toBottomOf="@+id/tv_infected_country_statistic" />

            <TextView
                android:id="@+id/tv_recovered_country_statistic"
                style="@style/TextView.Regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/loading"
                android:textSize="@dimen/font_nm"
                app:layout_constraintEnd_toEndOf="@+id/tv_infected_country_statistic"
                app:layout_constraintTop_toBottomOf="@+id/tv_patient_country_statistic" />

            <TextView
                android:id="@+id/tv_death_country_statistic"
                style="@style/TextView.Regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/loading"
                android:textSize="@dimen/font_nm"
                app:layout_constraintEnd_toEndOf="@+id/tv_infected_country_statistic"
                app:layout_constraintTop_toBottomOf="@+id/tv_recovered_country_statistic" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_country_statistic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_begin="120dp" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_global_statistic"
        style="@style/CustomCardView"
        android:layout_width="match_parent"
        android:layout_height="140dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/shape_g"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/tv_name_global_statistic"
                style="@style/TextView.SemiBold"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/global_statistic"
                android:textSize="@dimen/font_md"
                app:layout_constraintEnd_toStartOf="@+id/guideline_global_statistic"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_infected_global_statistic"
                style="@style/TextView.Regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/loading"
                android:textSize="@dimen/font_nm"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_patient_global_statistic"
                style="@style/TextView.Regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/loading"
                android:textSize="@dimen/font_nm"
                app:layout_constraintEnd_toEndOf="@+id/tv_infected_global_statistic"
                app:layout_constraintTop_toBottomOf="@+id/tv_infected_global_statistic" />

            <TextView
                android:id="@+id/tv_recovered_global_statistic"
                style="@style/TextView.Regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/loading"
                android:textSize="@dimen/font_nm"
                app:layout_constraintEnd_toEndOf="@+id/tv_infected_global_statistic"
                app:layout_constraintTop_toBottomOf="@+id/tv_patient_global_statistic" />

            <TextView
                android:id="@+id/tv_death_global_statistic"
                style="@style/TextView.Regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/loading"
                android:textSize="@dimen/font_nm"
                app:layout_constraintEnd_toEndOf="@+id/tv_infected_global_statistic"
                app:layout_constraintTop_toBottomOf="@+id/tv_recovered_global_statistic" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_global_statistic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_begin="120dp" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>