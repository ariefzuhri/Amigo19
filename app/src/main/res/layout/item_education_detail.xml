<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        style="@style/CustomCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/layout_background_education_detail"
            android:layout_width="match_parent"
            android:layout_height="310dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_background_education_detail"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:src="@color/gray"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"
                android:contentDescription="@string/cd_background_education_detail"/>

            <TextView
                android:id="@+id/tv_content_education_detail"
                style="@style/TextView.Regular"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/loading"
                android:textSize="@dimen/font_nm"
                android:textColor="@color/black"
                android:padding="8dp"
                android:textAlignment="center"
                android:gravity="center_horizontal"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>